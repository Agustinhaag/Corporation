<title>Register</title>
<link rel="stylesheet" href="Css/login.css" />
<main>
  <section id="banner">
    <div class="container-form">
      <form action="/register" method="post" enctype="multipart/form-data">
        <h2>Registro</h2>
        <div class="container-input">
          <label for="name">Nombre:</label>
          <input
            type="text"
            name="name"
            placeholder="Nombre"
            id="name"
            value="<%=values.name%>"
            class="form-control <%= errors && errors.find(error => error.path === 'name') ? 'is-invalid' : '' %>"
          />
          <% if (typeof errors !== "undefined") { %> <% const nameError =
          errors.find(error => error.path === 'name'); %>
          <div class="invalid-feedback">
            <%= nameError ? nameError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="container-input">
          <label for="surname">Apellido:</label>
          <input
            type="text"
            name="surname"
            id="surname"
            placeholder="Apellido"
            value="<%=values.surname%>"
            class="form-control <%= errors && errors.find(error => error.path === 'surname') ? 'is-invalid' : '' %>"
          />
          <% if (typeof errors !== "undefined") { %> <% const surnameError =
          errors.find(error => error.path === 'surname'); %>
          <div class="invalid-feedback">
            <%= surnameError ? surnameError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="container-input">
          <label for="email">Email:</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            value="<%=values.email%>"
            class="form-control <%= errors && errors.find(error => error.path === 'email') ? 'is-invalid' : '' %>"
          />
          <% if (typeof errors !== "undefined") { %> <% const emailError =
          errors.find(error => error.path === 'email'); %>
          <div class="invalid-feedback">
            <%= emailError ? emailError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="container-input">
          <label for="image">Foto de perfil:</label>
          <input
            type="file"
            name="image"
            id="image"
            class="form-control <%= errors && errors.find(error => error.path === 'email') ? 'is-invalid' : '' %>"
          />
          <% if (typeof errors !== "undefined") { %> 
            <% const imageError = errors.find(error => error.path === 'image'); %>
          <div class="invalid-feedback">
            <%= imageError ? imageError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="container-input">
          <label for="password">Contraseña:</label>
          <input
            type="password"
            name="password"
            placeholder="Contraseña"
            id="password"
            class="form-control <%= errors && errors.find(error => error.path === 'password') ? 'is-invalid' : '' %>"
          />
          <% if (typeof errors !== "undefined") { %> <% const passwordError =
          errors.find(error => error.path === 'password'); %>
          <div class="invalid-feedback">
            <%= passwordError ? passwordError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="container-input">
          <label for="password2">Repita su contraseña:</label>
          <input
            type="password"
            placeholder="Contraseña"
            name="password2"
            id="password2"
            class="form-control <%= errors && errors.find(error => error.path === 'password') ? 'is-invalid' : '' %>"
          />
          <% if (typeof errors !== "undefined") { %> <% const passwordError =
          errors.find(error => error.path === 'password'); %>
          <div class="invalid-feedback">
            <%= passwordError ? passwordError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="container-check">
          <div class="check <%= errors && errors.find(error => error.path === 'check') ? 'is-invalid' : '' %>">
            <label for="check">Acepte los términos y condiciones</label>
          <input type="checkbox" name="check" id=""/>
          </div>
          <% if (typeof errors !== "undefined") { %> <% const checkError =
          errors.find(error => error.path === 'check'); %>
          <div class="invalid-feedback">
            <%= checkError ? checkError.msg : '' %>
          </div>
          <% } %>
        </div>
        <div class="containerBtn">
          <button class="btn btn-outline-light" type="submit">Enviar</button>
        </div>
      </form>
      <div class="container-data">
        <p>¿Tienes una cuenta?</p>
        <a href="/login">Ingresa</a>
      </div>
    </div>
  </section>
</main>
